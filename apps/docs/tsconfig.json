{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "jsx": "preserve",
    "incremental": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "postcssOptions": {
          "useConfig": true
        }
      }
    ],
    "paths": {
      "@/src/*": [
        "src/*"
      ],
      "@/styles/*": [
        "src/styles/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/context/*": [
        "src/context/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/data/*": [
        "src/data/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
