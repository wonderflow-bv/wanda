{
  "name": "wanda",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:nocache": "turbo run build --no-cache",
    "build:apps": "turbo run build:next",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "release": "turbo run build:nocache && changeset publish",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "@wonderflow/eslint-config": "1.1.11",
    "config": "*",
    "copyfiles": "2.4.1",
    "eslint-plugin-json": "3.1.0",
    "husky": "7.0.4",
    "icons": "1.0.0",
    "lint-staged": "12.1.7",
    "prettier": "^2.5.1",
    "turbo": "1.0.28",
    "uvu": "0.5.3"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "start": {
        "cache": false
      },
      "test": {
        "cache": false
      },
      "lint": {
        "outputs": []
      }
    }
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@changesets/cli": "2.19.0"
  }
}
